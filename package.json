{
  "name": "httpoint",
  "version": "1.1.0",
  "description": "A Node.js command-line application that serves static files from a local directory via HTTP and supports file uploads",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dodbrian/httpoint.git"
  },
  "main": "dist/serve.js",
  "bin": {
    "httpoint": "dist/serve.js"
  },
  "scripts": {
    "build": "tsc && node scripts/copy-assets.js",
    "start": "node dist/serve.js",
    "dev": "npm run build && node dist/serve.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "http",
    "server",
    "static",
    "files",
    "upload",
    "cli",
    "local"
  ],
  "author": "Denis Zimin",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2"
  }
}
